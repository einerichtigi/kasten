        let likeCount = 0; // Initialize like count
        let videoCount = 0; // Initialize video count for uploads
        const videos = []; // Array to store uploaded videos

        // Event Listener f√ºr den Live starten Button
        document.getElementById('start-live-btn').addEventListener('click', function() {
            document.getElementById('home-screen').style.display = 'none';
            document.getElementById('live-session').style.display = 'block';
            startLive(); // Live-Stream starten
        });

        // Event Listener f√ºr den Home-Button
        document.getElementById('home-btn').addEventListener('click', function() {
            document.getElementById('live-session').style.display = 'none';
            document.getElementById('home-screen').style.display = 'block';
        });

        // Event Listener f√ºr den Entdecken-Button
        document.getElementById('discover-btn').addEventListener('click', function() {
            document.getElementById('home-screen').style.display = 'none';
            document.getElementById('discover-section').style.display = 'block';
        });

        // Event Listener f√ºr den Upload-Button
        document.getElementById('upload-btn').addEventListener('click', function() {
            const videoInput = document.getElementById('video-upload');
            const file = videoInput.files[0];

            if (file) {
                const videoURL = URL.createObjectURL(file);
                videos.push(videoURL); // Video zur Liste hinzuf√ºgen
                videoCount++;
                displayVideo(videoURL);
                videoInput.value = ''; // Eingabefeld leeren
            }
        });

